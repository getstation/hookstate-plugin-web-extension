{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "allowJs": false,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitThis": true,
    "module": "commonjs",
    "target": "ES2019",
    "lib": ["es2019"],
    "skipLibCheck": true,
    "rootDir": "src"
  },
  "exclude": ["tests"]
}
